###################################################

# First export entry
%include "sample_export.conf"

end of nfs-ganesha.conf.

###################################################################################################################
sample_export.conf
Change volume,path and hostname accordingly.
#######################################
EXPORT{
Export_Id = 90;
Path="/testvol2";
FSAL {
name = GLUSTER;
hostname="10.70.43.193";
volume="testvol2";
}
Access_type = RW;
Allow_root_access = true;
Pseudo="/testvol2";
NFS_Protocols = "3,4" ;
Transport_Protocols = "UDP,TCP" ;
SecType = "sys";
Tag = "testvol2";
}
~       
